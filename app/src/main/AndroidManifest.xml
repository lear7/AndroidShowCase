<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lear7.showcase">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:exported="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MaterialActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.VideoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MaterialAlipayActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.ListScrollView" />
        <activity android:name=".activity.BindingDemoActivity" />
        <activity android:name=".activity.MvpDemoActivity" />
        <activity android:name=".activity.MvpWrapActivity" />
        <activity android:name=".activity.DaggerActivity" />
        <activity
            android:name=".activity.FullScreenActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.DownloadTestActivity"
            android:configChanges="orientation" />
        <activity android:name=".activity.ThreadTestActivity" />
        <activity
            android:name=".activity.ThreadLearnActivity"
            android:persistableMode="persistAcrossReboots" />
        <activity android:name=".activity.ConstaintActivity" />

        <meta-data
            android:name="app_version"
            android:value="${app_version_key}" />
        <meta-data
            android:name="market"
            android:value="${market_key}" />

        <service android:name=".service.WeatherService" />
        <service android:name=".service.WeatherIntentService" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>