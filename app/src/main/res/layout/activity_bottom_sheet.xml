<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.BottomSheetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_bottom_sheet1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bottom Sheets" />

        <Button
            android:id="@+id/btn_bottom_sheet2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bottom Sheets Dialog" />

        <Button
            android:id="@+id/btn_bottom_sheet3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bottom Sheets Fragment" />

    </LinearLayout>

    <include layout="@layout/layout_bottom_sheet" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
