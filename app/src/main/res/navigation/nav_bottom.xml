<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.lear7.showcase.nav.bottom.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_bottom_nav_home">
        <action
            android:id="@+id/action_home2_to_explore"
            app:destination="@id/explore" />
    </fragment>
    <fragment
        android:id="@+id/explore"
        android:name="com.lear7.showcase.nav.bottom.ExploreFragment"
        android:label="fragment_explore"
        tools:layout="@layout/fragment_bottom_nav_explore">
        <action
            android:id="@+id/action_explore_to_more"
            app:destination="@id/more" />
    </fragment>
    <fragment
        android:id="@+id/more"
        android:name="com.lear7.showcase.nav.bottom.MoreFragment"
        android:label="fragment_more"
        tools:layout="@layout/fragment_bottom_nav_more">
        <action
            android:id="@+id/action_more_to_login"
            app:destination="@id/login"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/login"
        android:name="com.lear7.showcase.nav.demo.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_nav_login">
    </fragment>
</navigation>